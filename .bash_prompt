#!/bin/bash

function prompt_git(){
  local branchName=''
  branchName="$(git branch 2> /dev/null)"
  if [ $? -eq 0 ] ; then
		branchName=$(echo "$branchName" | grep '\*' | cut -c 3-)
		echo "${1}${branchName}"
	fi
}

