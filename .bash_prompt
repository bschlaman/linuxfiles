#!/bin/bash

# Color variables for prompt (wrapped for non-printing characters)
PROMPT_RESET="\[\e[0m\]"
PROMPT_BOLD="\[\e[1m\]"
PROMPT_RED="\[\e[31m\]"
PROMPT_GREEN="\[\e[32m\]"
PROMPT_YELLOW="\[\e[33m\]"
PROMPT_BLUE="\[\e[34m\]"
PROMPT_MAGENTA="\[\e[35m\]"
PROMPT_WHITE="\[\e[37m\]"

# Bold color variants
PROMPT_BOLD_GREEN="\[\033[01;32m\]"
PROMPT_BOLD_BLUE="\[\033[01;34m\]"
PROMPT_BOLD_WHITE="\[\033[01;37m\]"
PROMPT_RESET_ALT="\[\033[00m\]"

function prompt_git(){
  local branchName=''
  branchName="$(git branch 2> /dev/null)"
  if [ $? -eq 0 ] ; then
		branchName=$(echo "$branchName" | grep '\*' | cut -c 3-)
		echo "${1}á›˜ ${branchName}"
	fi
}

