#!/bin/bash

function prompt_git(){
  local branchName=''
  branchName="$(git branch 2> /dev/null)"
  if [ $? -eq 0 ] ; then
		branchName=$(echo "$branchName" | grep '\*' | cut -c 3-)
		echo "${1}${branchName}"
	fi
 }

export PS1="\[\e[1m\]\[\e[31m\][\[\e[33m\]\u\[\e[32m\]@\[\e[34m\]\h \[\e[35m\]\W\$(prompt_git \"\[\e[37m\] on \[\e[32m\]\")\[\e[31m\]]\[\e[37m\]$ \[\e[0m\]"

